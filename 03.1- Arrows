def main(): #main function

    num=int(input("How many arrows should I draw? "))
    count=0
    while (count<num): #main while loop
        print('<', end='')
        for a in range(count): #main for loop
            print('-', end='')
        print('>')
        count+=1  #iterating count variable

if __name__ == '__main__': # calling main function
    main()
