from turtle import *


def draw_a():
    """Complete this function to draw the character a."""
    setheading(90)
    fd(25)
    back(44)
    fd(25)
    circle(20)


def draw_e():
    """Complete this function to draw the character e."""

    setheading(0)
    backward(20)
    forward(40)
    setheading(90)
    circle(20,300)

def draw_i():
    """Complete this function to draw the character i."""
    setheading(270)
    circle(8)
    penup()
    fd(20)
    pendown()
    fd(30)

def draw_o():
    """Complete this function to draw the character o."""
    circle(18)

def draw_u():
    """Complete this function to draw the character u."""
    setheading(270)
    forward(20)
    circle(20,180)
    setheading(90)
    backward(20)
    forward(40)

def start():
    """This function initializes the window and the turtle.
    Do not modify this function.
    """
    setup(600, 400)
    width(9)
    speed(0)
    penup()
    goto(-220, -30)


def main():
    """You can use this for your own testing."""
    pass


if __name__ == '__main__':
    # Do not change this part
    start()
    main()
    done()
