def main():


    askCookie=int(input('How many cookies do you want to make? ')) # find how many cookies user wants to make

    baseCups=float(askCookie/48) # find the base number of cups
    sugarCups=baseCups*1.75 # find number of sugar cups
    sugarCups=round(sugarCups,2)

    butterCups=baseCups*1 # find number of butter cups
    butterCups=round(butterCups,2)

    flourCups=baseCups*2.5 #find number of flour cups
    flourCups=round(flourCups,2)

    #print the final results
    print('To make ' + str(askCookie) + ' cookies, you will need:')
    print('   ' + str(sugarCups) + ' cups of sugar')
    print('   ' +  str(butterCups) + ' cups of butter')
    print('  ' +  str(flourCups) + ' cups of flour')


if __name__ == '__main__':
    main() # calling function
